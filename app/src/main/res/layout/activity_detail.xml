<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="org.jcapps.explorechicago.DetailActivity">
              <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
              <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
              <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
              <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <android.support.v7.widget.CardView
        android:id="@+id/business_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_det_image"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chinatownsign"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_det_name"
                android:text="Name"
                android:padding="4dp"
                android:layout_below="@id/iv_det_image"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_det_address"
                android:text="Address"
                android:padding="4dp"
                android:layout_below="@id/tv_det_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_det_city"
                android:text="City"
                android:padding="4dp"
                android:layout_below="@id/tv_det_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_det_phone"
                android:text="Phone"
                android:autoLink="phone"
                android:linksClickable="true"
                android:padding="4dp"
                android:layout_below="@id/tv_det_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_det_hours"
                android:text="Hours"
                android:padding="4dp"
                android:layout_below="@id/tv_det_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_det_web"
                android:text="Web"
                android:autoLink="web"
                android:padding="4dp"
                android:layout_below="@id/tv_det_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
